{
	"compilerOptions": {
		"typeRoots" : ["./node_modules/@types", "./typings"],
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2021",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"rootDir": "./",
		"outDir": "dist",
		"diagnostics": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist"
	],
	"types": [
		"node"
	]
}